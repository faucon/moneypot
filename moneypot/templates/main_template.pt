<metal:main metal:define-macro="master">
<html xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="moneypot">
<head>
  <title metal:define-slot='title'>Moneypot</title>
  <meta charset="utf-8"/>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script type="text/javascript" metal:define-slot="javascript"></script>
  <link metal:define-slot="css"></link>
  <style type="text/css">
    td.number, th.number {
        text-align: right;
    }
  </style>
</head>
<body style="padding-top: 60px">
<div tal:condition="exists: view.logged_in"> 
    <span tal:define="global logged_in view.logged_in"></span>
</div>
  <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="${request.application_url}">Moneypot</a>
          <ul class="nav">
                <li><a href="${request.application_url}"><i class="icon icon-star-empty"></i> <span i18n:translate="">New Pot</span></a></li>
                <li tal:condition="logged_in" class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-th-list icon"></i> <span i18n:translate="">My Pots</span></a>
                    <ul class="dropdown-menu">
                        <li tal:repeat="participation view.user.active_participations">
                            <!--! show pot name as direct link to pot site -->
                           <a href="${view.request.route_url('pot', identifier=participation.identifier)}" alt="view this pot" tal:content="participation.pot.name"></a>
                        </li>
                        <li class="divider" role="presentation"></li>
                        <li>
                            <a href="${request.route_url('overview')}"><i class="icon icon-th-list"></i> <span i18n:translate="">Overview</span></a>
                        </li>
                    </ul>
                </li>
                <metal:define metal:define-slot="main-navbar">
                </metal:define>
            </ul>
            <ul class="nav pull-right">
            <li tal:condition="logged_in" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon"></i> <span tal:replace="logged_in">User</span></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="${request.route_url('change_password')}"><i class="icon-edit"></i> <span i18n:translate="">Change Password</span></a>
                    </li>
                    <li>
                        <a href="${request.route_url('logout')}"><i class="icon-off"></i> <span i18n:translate="">Logout</span></a>
                    </li>
                </ul>
            </li>
            <li tal:condition="not logged_in">
                <a href="${request.route_url('login')}"><i class="icon icon-arrow-right"></i> <span i18n:translate="">Login</span></a>
            </li>
          </ul>
        </div>
      </div>
  </div>
  <div class="container">
      <div class="content">
        <div class="row" metal:define-slot="messages">
            <div class="span12" tal:repeat="flashmessage request.session.pop_flash('error')">
                <div class="alert alert-error " >
                     <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <span tal:content="structure: flashmessage"></span>
                </div>
            </div>
            <div class="span12" tal:repeat="flashmessage request.session.pop_flash()"> <!-- default queue-->
                <div class="well" tal:content="structure: flashmessage"></div>
            </div>
            <div class="span12" tal:repeat="flashmessage request.session.pop_flash('success')">
                <div class="alert alert-success " >
                     <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <span tal:content="structure: flashmessage"></span>
                </div>
            </div>
        </div>
          <metal:main metal:define-slot="body"/>
      </div>
  </div>
    <script type="text/javascript">
        $("[rel=tooltip]").tooltip();
    </script>
</body>
</html>
</metal:main>
